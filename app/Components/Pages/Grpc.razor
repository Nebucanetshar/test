@page "/grpc"

@* injection du service via le composant *@
@inject Merge.MergeClient Merge

@using grpc;
@using app;
@using grpc.Services


<h3>gRPC Client in Blazor</h3>

<button class="btn-grpc" type="button" @onclick="CallBroadcast">appel diffusion grpc</button>

@if (isLoading)
{
    <p>Chargement...</p>
}

@if (string.IsNullOrEmpty(errorMessage))
{
    <p style="color:red">@errorMessage</p>
}

<p>
    <strong> Réponse du serveur : </strong>
</p>

<pre> @responseMessage</pre>


